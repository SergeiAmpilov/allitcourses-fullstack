// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // url      = env("DATABASE_URL")
  url      = "file:./dev.db"
}

model UserModel {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model DirectionModel {
  id       Int    @id @default(autoincrement())
  name      String
  slug      String @unique
}

model TechModel {
  id       Int    @id @default(autoincrement())
  name      String
  slug      String @unique
}

model SchoolModel {
  id       Int    @id @default(autoincrement())
  name      String
  slug      String @unique
}